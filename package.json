{
  "name": "GrinPlusPlus",
  "productName": "Grin++",
  "version": "1.2.7",
  "description": "Grin++ Wallet",
  "author": {
    "name": "David Burkett",
    "email": "davidburkett38@gmail.com"
  },
  "contributors": [
    {
      "name": "David Tavarez"
    }
  ],
  "license": "MIT",
  "private": true,
  "dependencies": {
    "@babel/runtime": "^7.17.9",
    "@blueprintjs/core": "^4.2.0",
    "@craco/craco": "^6.4.3",
    "@types/classnames": "^2.3.1",
    "@types/jest": "^27.4.1",
    "@types/styled-components": "^5.1.25",
    "@types/uuid": "^8.3.4",
    "acorn": "^8.7.0",
    "classnames": "^2.3.1",
    "custom-electron-titlebar": "^4.1.0",
    "date-fns": "^2.28.0",
    "easy-peasy": "^5.0.4",
    "electron-log": "^4.4.6",
    "electron-store": "^8.0.1",
    "electron-updater": "^5.0.1",
    "i18next": "^21.6.16",
    "i18next-browser-languagedetector": "^6.1.4",
    "immutability-helper": "^3.1.1",
    "node-fetch": "^3.2.3",
    "node-sass": "^7.0.1",
    "npm": "^8.7.0",
    "qrcode": "^1.5.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-dropzone": "^12.0.5",
    "react-i18next": "^11.16.7",
    "react-number-format": "^4.9.1",
    "react-router-dom": "^6.3.0",
    "react-scripts": "^5.0.1",
    "redux-persist-electron-storage": "^2.1.0",
    "styled-components": "^5.3.5",
    "tor-request": "^3.1.0",
    "ts-retry": "2.4.1",
    "typed-rest-client": "^1.8.6",
    "typescript": "^4.6.3",
    "uninstall": "0.0.0",
    "uuid": "^8.3.2"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "devDependencies": {
    "@testing-library/react": "^13.1.1",
    "@types/enzyme": "^3.10.12",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/file-saver": "^2.0.5",
    "@types/react": "^18.0.5",
    "@types/react-dom": "^18.0.1",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "cross-env": "^7.0.3",
    "electron": "^18.0.4",
    "electron-builder": "^23.0.3",
    "electron-notarize": "^1.2.1",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "eslint": "^8.13.0",
    "eslint-plugin-flowtype": "^8.0.3",
    "eslint-plugin-react": "^7.29.4",
    "fetch-mock-jest": "^1.5.1",
    "foreman": "^3.0.1",
    "husky": "^7.0.4",
    "jest-electron": "^0.1.12",
    "lint-staged": "^12.3.8",
    "prettier": "^2.6.2",
    "tslint": "^6.1.3"
  },
  "homepage": "./",
  "main": "./src/electron-starter.js",
  "build": {
    "appId": "GrinPlusPlus",
    "files": [
      "bin/**/*",
      "node_modules/**/*",
      "package.json",
      "!build/bin/mainnet.json",
      {
        "from": "public/",
        "to": "."
      },
      {
        "from": "release/",
        "to": ".",
        "filter": [
          "defaults.json"
        ]
      }
    ],
    "directories": {
      "buildResources": "build"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "GrinPlusPlus",
        "repo": "GrinPlusPlus"
      }
    ],
    "afterSign": "./build/notarize.js",
    "nsis": {
      "artifactName": "Grin++ ${version} Setup.${ext}",
      "oneClick": true,
      "createDesktopShortcut": true,
      "deleteAppDataOnUninstall": false,
      "installerIcon": "./assets/icons/256x256.ico",
      "uninstallerIcon": "./assets/icons/256x256.ico",
      "uninstallDisplayName": "Grin++"
    },
    "win": {
      "target": "nsis",
      "icon": "./assets/icons/256x256.ico",
      "publisherName": "Grin++",
      "verifyUpdateCodeSignature": false
    },
    "asar": true,
    "asarUnpack": [
      "**/bin/**/*"
    ],
    "mac": {
      "category": "public.app-category.finance",
      "target": [
        "dmg"
      ],
      "gatekeeperAssess": false,
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "dmg": {
      "artifactName": "Grin++ ${version} Setup.${ext}"
    },
    "linux": {
      "target": [
        "deb",
        "appImage"
      ],
      "icon": "app/static/icons",
      "category": "Finance"
    },
    "deb": {
      "depends": [
        "gconf2",
        "gconf-service",
        "libnotify4",
        "libappindicator1",
        "libxtst6",
        "libnss3",
        "libasound2"
      ],
      "artifactName": "GrinPlusPlus ${version}.${ext}"
    },
    "appImage": {
      "artifactName": "GrinPlusPlus ${version}.${ext}"
    }
  },
  "scripts": {
    "start": "craco start",
    "build": "craco build",
    "test": "craco test",
    "electron": "electron .",
    "dev": "nf start",
    "lint": "eslint ./src",
    "lint:fix": "eslint --fix ./src/**/*.{ts,tsx}",
    "postinstall": "electron-builder install-app-deps",
    "clean_build:win": "rmdir /s /q node_modules && npm install && npm run build && xcopy src\\electron-starter.js build\\electron-starter.js* && xcopy src\\notarize.js build\\notarize.js*",
    "clean_build:nix": "rm -rf node_modules/ && npm install && npm run build && cp -R ./assets/icons ./build/ && cp ./src/electron-starter.js ./build/ && cp ./src/notarize.js ./build/ && cp entitlements.mac.plist ./build/",
    "dist": "./node_modules/.bin/electron-builder build -c.extraMetadata.main=build/electron-starter.js",
    "release": "./node_modules/.bin/electron-builder build -p 'always' -c.extraMetadata.main=build/electron-starter.js",
    "pack": "rm -Rf node_modules && npm install && npm run build && cp ./src/electron-starter.js ./build/ && cp ./src/notarize.js ./build/ && cp entitlements.mac.plist ./build/ && ./node_modules/.bin/electron-builder build -mwl -c.extraMetadata.main=build/electron-starter.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "jest": {
    "moduleNameMapper": {
      "electron": "<rootDir>/mocks/electronMock.js"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
