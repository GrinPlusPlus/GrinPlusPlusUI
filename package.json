{
  "name": "GrinPlusPlus",
  "productName": "Grin++",
  "version": "0.7.7",
  "description": "Grin++ Wallet",
  "main": "app/background.js",
  "build": {
    "appId": "GrinPlusPlus",
    "files": [
      "app/**/*",
      "node_modules/**/*",
      "package.json",
      "!app/bin/mainnet.json"
    ],
    "directories": {
      "buildResources": "build"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "GrinPlusPlus",
        "repo": "GrinPlusPlus"
      }
    ],
    "afterSign": "./build/notarize.js",
    "nsis": {
      "artifactName": "Grin++ ${version} Setup.${ext}",
      "oneClick": true,
      "createDesktopShortcut": true,
      "deleteAppDataOnUninstall": false,
      "installerIcon": "./app/static/icons/GrinLogo.ico",
      "uninstallerIcon": "./app/static/icons/GrinLogo.ico",
      "uninstallDisplayName": "Grin++"
    },
    "win": {
      "target": "nsis",
      "icon": "./app/static/icons/GrinLogo.ico",
      "publisherName": "Grin++",
      "verifyUpdateCodeSignature": false
    },
    "asar": true,
    "asarUnpack": [
      "**/app/bin/**/*"
    ],
    "mac": {
      "category": "public.app-category.finance",
      "target": [
        "dmg",
        "zip"
      ],
      "gatekeeperAssess": false,
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "dmg": {
      "artifactName": "Grin++ ${version} Setup.${ext}"
    },
    "linux": {
      "target": [
        "deb",
        "appImage"
      ],
      "icon": "app/static/icons",
      "category": "Finance"
    },
    "deb": {
      "depends": [
        "gconf2",
        "gconf-service",
        "libnotify4",
        "libappindicator1",
        "libxtst6",
        "libnss3",
        "libasound2"
      ],
      "artifactName": "GrinPlusPlus ${version}.${ext}"
    },
    "appImage": {
      "artifactName": "GrinPlusPlus ${version}.${ext}"
    }
  },
  "author": "David Burkett",
  "license": "MIT",
  "scripts": {
    "dist:win64": "webpack --config=build/webpack.app.config.js --env=production && electron-builder -w --config.nsis.artifactName=\"${productName} ${version} Setup x64.${ext}\"",
    "publish:win64": "webpack --config=build/webpack.app.config.js --env=production && electron-builder -w -p 'always' --config.nsis.artifactName=\"${productName} ${version} Setup x64.${ext}\"",
    "dist:mac": "webpack --config=build/webpack.app.config.js --env=production && electron-builder",
    "publish:mac": "webpack --config=build/webpack.app.config.js --env=production && electron-builder -p 'always'",
    "dist:linux": "webpack --config=build/webpack.app.config.js --env=production && electron-builder -l",
    "publish:linux": "webpack --config=build/webpack.app.config.js --env=production && electron-builder -l -p 'always'",
    "postinstall": "electron-builder install-app-deps",
    "preunit": "webpack --config=build/webpack.unit.config.js --env=test --display=none",
    "unit": "electron-mocha temp/specs.js --renderer --require source-map-support/register",
    "pree2e": "webpack --config=build/webpack.app.config.js --env=test --display=none && webpack --config=build/webpack.e2e.config.js --env=test --display=none",
    "e2e": "mocha temp/e2e.js --require source-map-support/register",
    "test": "npm run unit && npm run e2e",
    "start": "node build/start.js",
    "release": "webpack --config=build/webpack.app.config.js --env=production && electron-builder",
    "lint": "eslint --cache --color --ext .jsx,.js src"
  },
  "dependencies": {
    "@babel/runtime": "^7.8.3",
    "@blueprintjs/core": "^3.23.1",
    "@material-ui/core": "^4.9.0",
    "@material-ui/icons": "^3.0.2",
    "body-parser": "^1.19.0",
    "classnames": "^2.2.6",
    "electron-config": "^2.0.0",
    "electron-log": "^3.0.9",
    "electron-unhandled": "^2.2.0",
    "electron-updater": "^4.2.0",
    "express": "^4.17.1",
    "fs": "0.0.1-security",
    "fs-jetpack": "^2.2.3",
    "jayson": "^3.2.0",
    "prop-types": "latest",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-hot-loader": "^4.12.19",
    "react-loading": "^2.0.3",
    "react-material-ui-form-validator": "^2.0.9",
    "react-router-dom": "^5.1.2"
  },
  "devDependencies": {
    "@babel/core": "^7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.8.3",
    "@babel/plugin-transform-async-to-generator": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.8.3",
    "@babel/preset-env": "^7.8.3",
    "@babel/preset-es2015": "^7.0.0-beta.53",
    "@babel/preset-react": "^7.8.3",
    "babel-loader": "^8.0.6",
    "electron": "^5.0.13",
    "electron-builder": "^22.3.2",
    "electron-devtools-installer": "^2.2.4",
    "electron-notarize": "^0.1.1",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "source-map-support": "^0.5.16",
    "style-loader": "^0.21.0",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10",
    "webpack-merge": "^4.2.2",
    "webpack-node-externals": "^1.7.2"
  }
}
