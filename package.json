{
  "name": "GrinPlusPlus",
  "productName": "Grin++",
  "version": "1.2.4",
  "description": "Grin++ Wallet",
  "author": {
    "name": "David Burkett",
    "email": "davidburkett38@gmail.com"
  },
  "contributors": [
    {
      "name": "David Tavarez",
      "email": "david@punksec.com"
    }
  ],
  "license": "MIT",
  "private": true,
  "dependencies": {
    "@babel/runtime": "^7.12.13",
    "@blueprintjs/core": "*",
    "@craco/craco": "^6.1.0",
    "@types/classnames": "*",
    "@types/jest": "^26.0.20",
    "@types/react": "^17.0.1",
    "@types/react-dom": "^17.0.0",
    "@types/styled-components": "*",
    "@types/uuid": "^8.3.0",
    "acorn": "^8.0.5",
    "classnames": "*",
    "custom-electron-titlebar": "*",
    "date-fns": "*",
    "easy-peasy": "^4.0.1",
    "electron-log": "*",
    "electron-store": "^7.0.1",
    "electron-updater": "*",
    "i18next": "*",
    "i18next-browser-languagedetector": "^6.0.1",
    "immutability-helper": "*",
    "node-fetch": "*",
    "node-sass": "^5.0.0",
    "npm": "^7.5.2",
    "qrcode": "*",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-dropzone": "^11.3.0",
    "react-i18next": "*",
    "react-number-format": "*",
    "react-router-dom": "*",
    "react-scripts": "^4.0.2",
    "redux-persist-electron-storage": "*",
    "styled-components": "*",
    "tor-request": "*",
    "ts-retry": "^2.3.0",
    "typed-rest-client": "*",
    "typescript": "^4.1.3",
    "uninstall": "*",
    "uuid": "^8.3.2"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "devDependencies": {
    "@testing-library/react": "*",
    "@types/enzyme": "*",
    "@types/enzyme-adapter-react-16": "*",
    "@types/file-saver": "*",
    "@types/react-router-dom": "*",
    "@typescript-eslint/eslint-plugin": "*",
    "@typescript-eslint/parser": "*",
    "cross-env": "*",
    "electron": "*",
    "electron-builder": "*",
    "electron-notarize": "*",
    "enzyme": "*",
    "enzyme-adapter-react-16": "*",
    "eslint": "*",
    "eslint-plugin-flowtype": "*",
    "eslint-plugin-react": "*",
    "fetch-mock-jest": "*",
    "foreman": "*",
    "husky": "*",
    "lint-staged": "*",
    "prettier": "*",
    "tslint": "*"
  },
  "homepage": "./",
  "main": "./src/electron-starter.js",
  "build": {
    "appId": "GrinPlusPlus",
    "files": [
      "bin/**/*",
      "node_modules/**/*",
      "package.json",
      "!build/bin/mainnet.json",
      {
        "from": "public/",
        "to": "."
      },
      {
        "from": "release/",
        "to": ".",
        "filter": [
          "defaults.json"
        ]
      }
    ],
    "directories": {
      "buildResources": "build"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "GrinPlusPlus",
        "repo": "GrinPlusPlus"
      }
    ],
    "afterSign": "./build/notarize.js",
    "nsis": {
      "artifactName": "Grin++ ${version} Setup.${ext}",
      "oneClick": true,
      "createDesktopShortcut": true,
      "deleteAppDataOnUninstall": false,
      "installerIcon": "./assets/icons/256x256.ico",
      "uninstallerIcon": "./assets/icons/256x256.ico",
      "uninstallDisplayName": "Grin++"
    },
    "win": {
      "target": "nsis",
      "icon": "./assets/icons/256x256.ico",
      "publisherName": "Grin++",
      "verifyUpdateCodeSignature": false
    },
    "asar": true,
    "asarUnpack": [
      "**/bin/**/*"
    ],
    "mac": {
      "category": "public.app-category.finance",
      "target": [
        "dmg"
      ],
      "gatekeeperAssess": false,
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "dmg": {
      "artifactName": "Grin++ ${version} Setup.${ext}"
    },
    "linux": {
      "target": [
        "deb",
        "appImage"
      ],
      "icon": "app/static/icons",
      "category": "Finance"
    },
    "deb": {
      "depends": [
        "gconf2",
        "gconf-service",
        "libnotify4",
        "libappindicator1",
        "libxtst6",
        "libnss3",
        "libasound2"
      ],
      "artifactName": "GrinPlusPlus ${version}.${ext}"
    },
    "appImage": {
      "artifactName": "GrinPlusPlus ${version}.${ext}"
    }
  },
  "scripts": {
    "start": "craco start start",
    "build": "craco build",
    "test": "craco test",
    "electron": "electron .",
    "dev": "nf start",
    "lint": "eslint ./src",
    "lint:fix": "eslint --fix ./src/**/*.{ts,tsx}",
    "postinstall": "electron-builder install-app-deps",
    "clean_build:win": "rmdir /s /q node_modules && npm install && npm run build && xcopy src\\electron-starter.js build\\electron-starter.js* && xcopy src\\notarize.js build\\notarize.js*",
    "clean_build:nix": "rm -rf node_modules/ && npm install && npm run build && cp -R ./assets/icons ./build/ && cp ./src/electron-starter.js ./build/ && cp ./src/notarize.js ./build/ && cp entitlements.mac.plist ./build/",
    "dist": "./node_modules/.bin/electron-builder build -c.extraMetadata.main=build/electron-starter.js",
    "release": "./node_modules/.bin/electron-builder build -p 'always' -c.extraMetadata.main=build/electron-starter.js",
    "pack": "rm -Rf node_modules && npm install && npm run build && cp ./src/electron-starter.js ./build/ && cp ./src/notarize.js ./build/ && cp entitlements.mac.plist ./build/ && ./node_modules/.bin/electron-builder build -mwl -c.extraMetadata.main=build/electron-starter.js",
    "update:packages": "node wipe-dependencies.js && rm -rf node_modules && npm update --save-dev && npm update --save"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "jest": {
    "moduleNameMapper": {
      "electron": "<rootDir>/mocks/electronMock.js"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
